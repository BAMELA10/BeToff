@model BeToff.Web.Models.PhotoFamillyListViewModel;
@{
    ViewData["Title"] = "Album";
}

<div class="text-center">
    <h1 class="display-4">Album</h1>
</div>

<div class="text-center">
    @foreach(var items in Model.Items) {
        <div class="card" style="width: 18rem;">
            <img class="card-image-top" src="@items.Image" />
            <div class="card-header">
               @items.Title
            </div>
            <div class="card-body">
                <a class="btn btn-danger" asp-action="RemoveFamillyPicture" asp-route-id="@items.FamilyId" asp-route-photoId="@items.Id">Delete</a>
                @* <a class="btn btn-dark" asp-action="" asp-route-id="" asp-route-photoId="">View</a> *@
            </div>
            <div class="card-footer ">
                @items.PubliedAt;
            </div>
        </div>
    }  
</div>
